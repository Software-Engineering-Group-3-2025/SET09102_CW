<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.DataPage"
             Title="DataPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
        </HorizontalStackLayout>
        <Label 
            Text="What Data Would You Like to View?"
            FontSize="24" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Water Quality Data" 
                Clicked="OnWaterQualityDataClicked"/>
        <Button Text="Air Quality Data"
                Clicked="OnAirQualityDataClicked"/>
        <Button Text="Weather Data"
                Clicked="OnWeatherDataClicked"/>
    </VerticalStackLayout>
</ContentPage>
