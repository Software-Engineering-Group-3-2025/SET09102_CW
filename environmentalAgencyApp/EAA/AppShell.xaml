<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EAA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EAA.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Environmental Agency App"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Environmental Scientist"
            ContentTemplate="{DataTemplate views:EnvironmentalScientistPage}"
            Icon="{OnPlatform 'icon_environmental_scientist.png', iOS='icon_environmental_scientist.png', MacCatalyst='icon_environmental_scientist.png'}" />
    </TabBar>

</Shell>

