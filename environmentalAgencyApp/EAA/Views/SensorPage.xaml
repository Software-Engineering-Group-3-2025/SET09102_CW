<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EAA.Models"
             x:Class="EAA.Views.SensorsPage"
             Title="Sensors Status">

    <VerticalStackLayout Padding="5"
            Spacing="15">
        <Label Text="Sensor Status"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
        <Label Text="{Binding SensorHeader}"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Gray"
               HorizontalOptions="Center"/>
        <Button Text="Check Air Sensors"
                Command="{Binding CheckAirSensorsCommand}"/>
        <Button Text="Check Water Sensors"
                Command="{Binding CheckWaterSensorsCommand}"/>
        <Button Text="Check Weather Sensors"
                Command="{Binding CheckWeatherSensorsCommand}"/>


        <CollectionView ItemsSource="{Binding Sensors}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:SensorModel">
                    <Frame BorderColor="Gray"
                            Padding="10"
                            Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}"
                                    FontAttributes="Bold"/>
                            <Label Text="{Binding IsOnline, StringFormat='Online: {0}'}"/>
                            <Label Text="{Binding LastMaintenance, StringFormat='Last Check: {0:yyyy-MM-dd}'}"/>
                            <Label Text="{Binding NextMaintenance, StringFormat='Next Check: {0:yyyy-MM-dd}'}"/>
                            <Label Text="{Binding IsFaulty, StringFormat='Faulty: {0}'}"
                                    TextColor="Red"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
